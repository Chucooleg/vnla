    # LSTM parameters
    "word_embed_size"       : 256,
    "nav_embed_size"        : 32,
    "ask_embed_size"        : 32,
    "max_input_length"      : 50,
    "num_lstm_layers"       : 1,
    "hidden_size"           : 512,
    "coverage_size"         : 10,
    "bidirectional"         : false,
    "dropout_ratio"         : 0.5,

    # bootstrap parameters
    "bootstrap"             : 0,
    "n_ensemble"            : 8,
    "bernoulli_probability" : 0.9,
    "bootstrap_majority_vote" : 1,

    # tensorboard logging
    "plot_to_philly"        : 0
}